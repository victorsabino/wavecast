/* ============================================================================
   BULK VIDEO AUDIO PROCESSOR - NEW LAYOUT
   Design inspired by: HBBatchBeast, Handbrake, Modern SaaS tools
   ============================================================================ */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  /* Colors */
  --primary: #667eea;
  --primary-dark: #5568d3;
  --secondary: #764ba2;
  --success: #43e97b;
  --warning: #ffd93d;
  --danger: #ff4444;
  --bg: #f5f7fa;
  --bg-dark: #e8edf3;
  --surface: #ffffff;
  --text: #1a1a1a;
  --text-light: #6b7280;
  --border: #e5e7eb;
  --border-dark: #d1d5db;

  /* Spacing */
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;

  /* Border radius */
  --radius-sm: 4px;
  --radius: 8px;
  --radius-lg: 12px;

  /* Shadows */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
  --shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.15);

  /* Transitions */
  --transition: 0.2s ease;
  --transition-slow: 0.3s ease;

  /* Layout */
  --nav-height: 64px;
  --action-bar-height: 80px;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text);
  background: var(--bg);
  overflow: hidden;
}

/* ============================================================================
   TOP NAVIGATION
   ============================================================================ */

.top-nav {
  height: var(--nav-height);
  background: var(--surface);
  border-bottom: 1px solid var(--border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.app-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text);
  margin: 0;
}

.version {
  font-size: 0.75rem;
  color: var(--text-light);
  padding: 2px 8px;
  background: var(--bg);
  border-radius: var(--radius-sm);
}

.nav-right {
  display: flex;
  gap: var(--spacing-sm);
}

.nav-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: transparent;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  color: var(--text);
  cursor: pointer;
  transition: var(--transition);
  font-size: 14px;
  font-family: inherit;
}

.nav-btn:hover {
  background: var(--bg);
  border-color: var(--border-dark);
}

/* ============================================================================
   MAIN WORKFLOW
   ============================================================================ */

.workflow {
  height: calc(100vh - var(--nav-height) - var(--action-bar-height));
  overflow-y: auto;
  padding: var(--spacing-lg);
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-lg);
  grid-auto-rows: min-content;
}

.workflow-step {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  min-height: 300px;
  display: flex;
  flex-direction: column;
}

.workflow-step.full-width {
  grid-column: 1 / -1;
}

.step-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-md);
  border-bottom: 2px solid var(--bg);
}

.step-number {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.25rem;
  flex-shrink: 0;
}

.step-info {
  flex: 1;
}

.step-info h2 {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0 0 0.25rem 0;
  color: var(--text);
}

.step-desc {
  font-size: 0.875rem;
  color: var(--text-light);
  margin: 0;
}

.step-stats {
  display: flex;
  gap: var(--spacing-sm);
}

.stat-badge {
  padding: 0.25rem 0.75rem;
  background: var(--primary);
  color: white;
  border-radius: 999px;
  font-size: 0.875rem;
  font-weight: 500;
}

.step-actions {
  display: flex;
  gap: var(--spacing-sm);
}

/* ============================================================================
   DROP ZONES
   ============================================================================ */

.drop-zone {
  border: 2px dashed var(--border-dark);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-md);
  text-align: center;
  background: var(--bg);
  transition: var(--transition);
  cursor: pointer;
  min-height: 200px;
}

.drop-zone:hover {
  border-color: var(--primary);
  background: rgba(102, 126, 234, 0.05);
}

.drop-zone.dragover {
  border-color: var(--primary);
  background: rgba(102, 126, 234, 0.1);
  transform: scale(1.02);
}

.drop-zone.compact {
  min-height: 150px;
  padding: var(--spacing-lg);
}

.drop-zone svg {
  color: var(--text-light);
  opacity: 0.6;
}

.drop-zone h3 {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text);
  margin: 0;
}

.drop-zone p {
  font-size: 0.875rem;
  color: var(--text-light);
  margin: 0;
}

/* ============================================================================
   BUTTONS
   ============================================================================ */

.primary-btn {
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  border: none;
  border-radius: var(--radius);
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  box-shadow: var(--shadow);
  font-family: inherit;
}

.primary-btn:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-lg);
}

.primary-btn:active {
  transform: translateY(0);
}

.primary-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.secondary-btn {
  padding: 0.5rem 1rem;
  background: var(--surface);
  color: var(--text);
  border: 1px solid var(--border);
  border-radius: var(--radius);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-family: inherit;
}

.secondary-btn:hover {
  background: var(--bg);
  border-color: var(--border-dark);
}

.icon-btn {
  padding: 0.5rem 0.75rem;
  background: transparent;
  color: var(--text);
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  font-size: 13px;
  cursor: pointer;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  font-family: inherit;
}

.icon-btn:hover {
  background: var(--bg);
}

.icon-btn.danger {
  color: var(--danger);
  border-color: rgba(255, 68, 68, 0.3);
}

.icon-btn.danger:hover {
  background: rgba(255, 68, 68, 0.1);
  border-color: var(--danger);
}

.text-btn {
  padding: 0.5rem;
  background: transparent;
  border: none;
  color: var(--text-light);
  cursor: pointer;
  font-size: 14px;
  transition: var(--transition);
  font-family: inherit;
}

.text-btn:hover {
  color: var(--text);
}

/* ============================================================================
   FILE LISTS
   ============================================================================ */

.file-list {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 1px solid var(--border);
}

.list-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.scrollable-list {
  flex: 1;
  overflow-y: auto;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  background: var(--bg);
}

.list-item {
  padding: var(--spacing-sm);
  border-bottom: 1px solid var(--border);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  transition: var(--transition);
  cursor: pointer;
}

.list-item:hover {
  background: rgba(102, 126, 234, 0.05);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-number {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: var(--bg-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 600;
  color: var(--text-light);
  flex-shrink: 0;
}

.list-item-icon {
  color: var(--text-light);
  flex-shrink: 0;
}

.list-item-info {
  flex: 1;
  min-width: 0;
}

.list-item-name {
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-item-meta {
  font-size: 12px;
  color: var(--text-light);
}

.list-item-actions {
  display: flex;
  gap: 0.25rem;
  opacity: 0;
  transition: var(--transition);
}

.list-item:hover .list-item-actions {
  opacity: 1;
}

/* ============================================================================
   BACKGROUND SELECTOR
   ============================================================================ */

.background-selector {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.bg-tabs {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.bg-tab {
  flex: 1;
  padding: 0.75rem;
  background: transparent;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  transition: var(--transition);
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
  font-family: inherit;
}

.bg-tab:hover {
  background: var(--bg);
}

.bg-tab.active {
  background: var(--primary);
  color: white;
  border-color: var(--primary);
}

.bg-tab.active svg {
  stroke: white;
}

.bg-content {
  display: none;
  flex-direction: column;
  gap: var(--spacing-md);
  flex: 1;
}

.bg-content.active {
  display: flex;
}

.bg-preview-img {
  width: 100%;
  max-height: 200px;
  object-fit: contain;
  border-radius: var(--radius);
  margin-top: var(--spacing-sm);
}

.bg-options {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.bg-options label {
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
}

.bg-options select {
  padding: 0.5rem;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  background: var(--surface);
  font-size: 14px;
  font-family: inherit;
}

.color-picker-wrapper {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

#bg-color-picker {
  width: 100%;
  height: 100px;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  cursor: pointer;
}

.color-presets {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  gap: var(--spacing-sm);
}

.color-preset {
  aspect-ratio: 1;
  border: 2px solid transparent;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: var(--transition);
}

.color-preset:hover {
  border-color: var(--text);
  transform: scale(1.1);
}

/* ============================================================================
   TOGGLE SWITCH
   ============================================================================ */

.music-mode-toggle {
  display: flex;
  align-items: center;
}

.toggle-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  user-select: none;
}

.toggle-label input[type="checkbox"] {
  display: none;
}

.toggle-slider {
  position: relative;
  width: 40px;
  height: 22px;
  background: var(--border-dark);
  border-radius: 999px;
  transition: var(--transition);
}

.toggle-slider::before {
  content: '';
  position: absolute;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: white;
  top: 2px;
  left: 2px;
  transition: var(--transition);
  box-shadow: var(--shadow-sm);
}

.toggle-label input:checked + .toggle-slider {
  background: var(--primary);
}

.toggle-label input:checked + .toggle-slider::before {
  transform: translateX(18px);
}

.toggle-text {
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
}

/* ============================================================================
   METADATA TABLE
   ============================================================================ */

.metadata-table-container {
  flex: 1;
  overflow: auto;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  background: var(--surface);
}

.metadata-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

.metadata-table thead {
  position: sticky;
  top: 0;
  background: var(--bg);
  z-index: 10;
}

.metadata-table th {
  padding: var(--spacing-sm);
  text-align: left;
  font-weight: 600;
  color: var(--text);
  border-bottom: 2px solid var(--border);
}

.metadata-table td {
  padding: var(--spacing-sm);
  border-bottom: 1px solid var(--border);
  vertical-align: middle;
}

.metadata-table tbody tr:hover {
  background: var(--bg);
}

.metadata-table input,
.metadata-table textarea {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-family: inherit;
  background: var(--surface);
}

.metadata-table input:focus,
.metadata-table textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.metadata-table textarea {
  resize: vertical;
  min-height: 60px;
}

/* ============================================================================
   BOTTOM ACTION BAR
   ============================================================================ */

.action-bar {
  height: var(--action-bar-height);
  background: var(--surface);
  border-top: 1px solid var(--border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-lg);
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
  position: sticky;
  bottom: 0;
  z-index: 100;
}

.action-bar-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.status-text {
  font-size: 14px;
  color: var(--text-light);
}

.action-bar-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.export-settings {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: 14px;
}

.export-settings label {
  font-weight: 500;
  color: var(--text);
}

.export-settings select {
  padding: 0.5rem 0.75rem;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  background: var(--surface);
  font-size: 14px;
  font-family: inherit;
  cursor: pointer;
}

.cta-btn {
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--success), #38d170);
  color: white;
  border: none;
  border-radius: var(--radius-lg);
  font-size: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  box-shadow: var(--shadow-lg);
  font-family: inherit;
  position: relative;
}

.cta-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 12px 32px rgba(67, 233, 123, 0.4);
}

.cta-btn:active:not(:disabled) {
  transform: translateY(0);
}

.cta-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-badge {
  background: rgba(255, 255, 255, 0.3);
  padding: 0.25rem 0.5rem;
  border-radius: 999px;
  font-size: 0.875rem;
  font-weight: 700;
}

/* ============================================================================
   PROGRESS OVERLAY
   ============================================================================ */

.progress-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.progress-modal {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  max-width: 600px;
  width: 90%;
  box-shadow: var(--shadow-lg);
}

.progress-modal h2 {
  font-size: 1.5rem;
  font-weight: 600;
  margin: 0 0 var(--spacing-lg) 0;
  text-align: center;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
  font-size: 14px;
  color: var(--text-light);
}

.progress-bar-wrapper {
  width: 100%;
  height: 12px;
  background: var(--bg);
  border-radius: 999px;
  overflow: hidden;
  margin-bottom: var(--spacing-sm);
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary), var(--secondary));
  border-radius: 999px;
  transition: width 0.3s ease;
}

.progress-percentage {
  text-align: center;
  font-size: 2rem;
  font-weight: 700;
  color: var(--primary);
  margin: var(--spacing-md) 0;
}

.progress-details {
  text-align: center;
  font-size: 14px;
  color: var(--text-light);
  margin-bottom: var(--spacing-lg);
}

/* ============================================================================
   MODAL
   ============================================================================ */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(2px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  background: var(--surface);
  border-radius: var(--radius-lg);
  max-width: 600px;
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: var(--shadow-lg);
}

.modal-header {
  padding: var(--spacing-lg);
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header h2 {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0;
}

.close-btn {
  background: transparent;
  border: none;
  cursor: pointer;
  color: var(--text-light);
  padding: 0.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-sm);
  transition: var(--transition);
}

.close-btn:hover {
  background: var(--bg);
  color: var(--text);
}

.modal-body {
  padding: var(--spacing-lg);
  overflow-y: auto;
  flex: 1;
}

.modal-footer {
  padding: var(--spacing-lg);
  border-top: 1px solid var(--border);
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
}

.setting-section {
  margin-bottom: var(--spacing-lg);
}

.setting-section:last-child {
  margin-bottom: 0;
}

.setting-section h3 {
  font-size: 1rem;
  font-weight: 600;
  margin: 0 0 var(--spacing-md) 0;
}

.form-group {
  margin-bottom: var(--spacing-md);
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
  margin-bottom: 0.5rem;
}

.form-group input[type="text"],
.form-group input[type="password"] {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  font-size: 14px;
  font-family: inherit;
}

.form-group input[type="checkbox"] {
  margin-right: 0.5rem;
}

/* ============================================================================
   SCROLLBAR
   ============================================================================ */

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg);
}

::-webkit-scrollbar-thumb {
  background: var(--border-dark);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-light);
}

/* ============================================================================
   UTILITIES
   ============================================================================ */

.hidden {
  display: none !important;
}

.loading {
  pointer-events: none;
  opacity: 0.6;
}

/* ============================================================================
   MODE SELECTION DIALOG (from old layout)
   ============================================================================ */

.mode-selection-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.mode-selection-content {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  max-width: 500px;
  width: 90%;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
