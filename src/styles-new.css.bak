}

.drag-hint .hint-active {
  color: #667eea;
  font-weight: 600;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate(-50%, 10px);
  }
  to {
    opacity: 1;
    transform: translate(-50%, 0);
  }
}

.timeline-clip.pushed {
  opacity: 0.5;
  border: 2px dashed rgba(255, 255, 255, 0.5);
